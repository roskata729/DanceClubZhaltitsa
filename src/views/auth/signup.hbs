<div class="container p-4">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-header">
          <h3 class="text-center mb-0">Регистрация</h3>
        </div>
        <div class="card-body">
          <form action="/signup" method="POST">
            <div class="form-group mb-3">
              <label for="username" class="form-label">Потребителско име</label>
              <div class="input-group">
                <input type="text" name="username" placeholder="Потребителско име" class="form-control" autofocus required id="username">
              </div>
              <small class="form-text text-muted" id="username-info"></small>
            </div>
            <div class="form-group mb-3">
              <label for="fullname" class="form-label">Пълно име</label>
              <input type="text" name="fullname" placeholder="Пълно име" class="form-control" required id="fullname">
            </div>
            <div class="form-group mb-3">
              <label for="password" class="form-label">Парола</label>
              <input type="password" name="password" placeholder="Парола" class="form-control" required id="password">
            </div>
            <div class="form-group mb-3">
              <label for="birth_date" class="form-label">Дата на раждане</label>
              <input id="birth_date" type="date" name="birth_date" placeholder="Дата на раждане" class="form-control" value="2000-01-01" required>
            </div>
            <div class="form-group text-center mb-0">
              <button class="btn btn-success btn-lg w-100">
                Регистрирай се
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
