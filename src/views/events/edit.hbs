<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/events/edit/{{event.ID}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="Title" placeholder="Title" value="{{event.Title}}" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="Description" rows="2"
                                placeholder="Description">{{event.Description}}</textarea>
                        </div>
                        <div class="form-group">
                            <input type="date" id="date" class="form-control" name="Date" placeholder="Date" value="{{event.Date}}">
                        </div>
                        <div class="form-group">
                            <input type="text" id="agelimit" class="form-control" name="AgeLimit" placeholder="Age Limit" value="{{event.AgeLimit}}">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>