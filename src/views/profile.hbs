<div class="container p-8">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="text-center">
        <div class="card-body">
          <h3 class="card-title mt-3 mb-4">Добре дошли {{user.fullname}}</h3>
          <div class="row">
            <div class="col-md-12 mx-auto">
              <div class="card mb-3">
                <div class="card-body">
                  <h5 class="card-title">Лична информация</h5>
                  <h6 class="card-text mt-3">Username: {{user.username}}</h6>
                  <h6 class="card-text mt-3">Пълно име: {{user.fullname}}</h6>
                  <h6 class="card-text mt-3">Възраст: {{user.user_age}}</h6>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="card mb-3 rounded-circle zoom_element">
                <div class="card-body">
                  <h5 class="card-title">Видео уроци</h5>
                  <a href="/links">
                    <img src="/img/videos.png" alt="" class="card-img-top mx-auto m-2 rounded-circle w-50">
                  </a>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card mb-3 rounded-circle zoom_element">
                <div class="card-body">
                  <h5 class="card-title">Събития</h5>
                  <a href="/events">
                    <img src="/img/events-icon.jpg" alt="" class="card-img-top mx-auto m-2 rounded-circle w-50">
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
