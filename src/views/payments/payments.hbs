<div class="container">
    <div class="payment-form mt-5">
        <div class="payment-form__item payment-form__item--single-training zoom_element">
                <h2 class="payment-form__item__title text-center">Плащане за единична тренировка</h2>
                <hr>
                <form action="/payments/add" method="POST">
                <div class="payment-form__item__field row">
                    <label for="training_date" class="col">Training Date:</label>
                    <select id="training_date" name="training_date" class="col form-control">
                    {{#each futureDates}}
                      <option value="{{this.date}}">{{moment this.date "DD / MM / YYYY"}}</option>
                    {{/each}}
                  </select>
                </div>
                <div class="payment-form__item__field row">
                    <label for="cardholder-name" class="col">Име на картодържателя:</label>
                    <input type="text" id="cardholder-name" name="cardholder-name" class="col form-control">
                </div>
                <div class="payment-form__item__field row">
                    <label for="card-number" class="col">Номер на карта:</label>
                    <input type="text" id="card-number" name="card-number" class="col form-control">
                </div>
                <div class="payment-form__item__field row">
                    <label for="expiration-date" class="col">Валидност:</label>
                    <input type="text" id="expiration-date" name="expiration-date" class="col form-control">
                </div>
                <div class="payment-form__item__field row">
                    <label for="cvv-code" class="col">CVV код:</label>
                    <input type="text" id="cvv-code" name="cvv-code" class="col form-control">
                </div>
                <div class="text-center row">
                <button class="payment-form__item__button col" type="submit" class="btn btn-primary btn-block">Потвърди поръчка</button>
                <span class="col align-center">Сума за плащане: 10 лв</span>
                </div>
                </form>
            </div>
            <div class="payment-form__item payment-form__item--monthly-card zoom_element">
  <h2 class="payment-form__item__title text-center">Плащане за месечна карта</h2>
  <hr>
  <form action="/payments/membership" method="POST">
    <div class="payment-form__item__field row">
      <label for="cardholder-name-monthly" class="col-sm-4 col-form-label">Име на картодържателя:</label>
      <div class="col-sm-8">
        <input type="text" id="cardholder-name-monthly" name="cardholder-name-monthly" class="form-control">
      </div>
    </div>
    <div class="payment-form__item__field row">
      <label for="card-number-monthly" class="col-sm-4 col-form-label">Номер на карта:</label>
      <div class="col-sm-8">
        <input type="text" id="card-number-monthly" name="card-number-monthly" class="form-control">
      </div>
    </div>
    <div class="payment-form__item__field row">
      <label for="expiration-date-monthly" class="col-sm-4 col-form-label">Валидност:</label>
      <div class="col-sm-8">
        <input type="text" id="expiration-date-monthly" name="expiration-date-monthly" class="form-control">
      </div>
    </div>
    <div class="payment-form__item__field row">
      <label for="cvv-code-monthly" class="col-sm-4 col-form-label">CVV код:</label>
      <div class="col-sm-8">
        <input type="text" id="cvv-code-monthly" name="cvv-code-monthly" class="form-control">
      </div>
    </div>
    <div class="payment-form__item__total row" style="margin-top: 50px;">
      <div class="col-sm-4 form-check">
        <input type="checkbox" id="multi-sport-card" name="multi-sport-card" class="form-check-input" onchange="updateMembershipCost()">
        <label class="form-check-label" for="multi-sport-card">Използване на Мултиспорт карта:</label>
      </div>
      <div class="col-sm-8">
        <input id="multiSportDiscount" type="hidden" value="{{multiSportDiscount}}">
        <input id="membership_cost" type="hidden" value="{{membershipCost}}">
        <label for="monthly-total" class="col-form-label">Сума за плащане:</label>
        <span id="membership-cost" class="text-danger">{{membershipCost}} лв</span>
      </div>
    </div>
    <div class="text-center">
    <button class="payment-form__item__button btn btn-primary mt-3" type="submit">Потвърди поръчка</button>
    </div>
  </form>
</div>

    </div>
</div>

<script src="/js/payments.js"></script>

