<div class="container p-2">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/schedule/add" method="POST">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>ID на групата</td>
                                    <td>
                                        <div class="form-group">
                                            <input class="form-control" name="group_id" rows="2"
                                                placeholder="ID на групата" ></input>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Дата</td>
                                    <td>
                                        <div class="form-group">
                                            <input type="date" id="date" class="form-control" name="date" placeholder="Дата" min="{{futureDates}}">
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <hr>
                        <div class="form-group pt-3 mb-0 row text-center">
                            <button class="btn btn-success btn-block">
                                Запази
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
